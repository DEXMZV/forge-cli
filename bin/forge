#!/usr/bin/env php
<?php

use Sven\ForgeCLI\Commands\Jobs;
use Sven\ForgeCLI\Commands\Sites;
use Sven\ForgeCLI\Commands\Daemons;
use Sven\ForgeCLI\Commands\Servers;
use Sven\ForgeCLI\Commands\Services;
use Sven\ForgeCLI\Commands\Authorize;
use Sven\ForgeCLI\Commands\Deployment;
use Sven\ForgeCLI\Commands\Credentials;
use Sven\ForgeCLI\Commands\FirewallRules;

if (file_exists(__DIR__.'/../../../autoload.php')) {
    require __DIR__.'/../../../autoload.php';
} else {
    require __DIR__.'/../vendor/autoload.php';
}

$app = new Symfony\Component\Console\Application('Forge CLI', '0.1.3');

// Server-related commands
$app->addCommands([
    new Authorize,
    new Credentials,
    new Servers\Create,
    new Servers\All,
    new Servers\Get,
    new Servers\Update,
    new Servers\Delete,
    new Servers\Reboot,
    new Sites\Create,
    new Sites\All,
    new Sites\Get,
    new Sites\Update,
    new Sites\Delete,
    new Services\Reboot,
    new Services\Stop,
    new Services\Install,
    new Services\Uninstall,
    new Daemons\All,
    new Daemons\Create,
    new Daemons\Delete,
    new Daemons\Get,
    new Daemons\Reboot,
    new Deployment\Deploy,
    new Deployment\DisableQuickDeploy,
    new Deployment\EnableQuickDeploy,
    new Deployment\GetScript,
    new Deployment\UpdateScript,
    new Deployment\Log,
    new Deployment\ResetStatus,
    new FirewallRules\All,
    new FirewallRules\Create,
    new FirewallRules\Delete,
    new FirewallRules\Get,
    new Jobs\All,
    new Jobs\Create,
    new Jobs\Delete,
    new Jobs\Get,
]);

$app->run();
