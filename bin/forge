#!/usr/bin/env php
<?php

use Sven\ForgeCLI\Commands\{
    Authorize, Credentials, Daemons, Databases, Deployment,
    FirewallRules, Jobs, Recipes, Servers, Services, Sites,
    Workers
};

if (file_exists(__DIR__.'/../../../autoload.php')) {
    require __DIR__.'/../../../autoload.php';
} else {
    require __DIR__.'/../vendor/autoload.php';
}

$app = new Symfony\Component\Console\Application('Forge CLI', '0.1.4');

$app->addCommands([
    new Authorize,
    new Credentials,
    new Servers\Create,
    new Servers\All,
    new Servers\Get,
    new Servers\Update,
    new Servers\Delete,
    new Servers\Reboot,
    new Sites\Create,
    new Sites\All,
    new Sites\Get,
    new Sites\Update,
    new Sites\Delete,
    new Services\Reboot,
    new Services\Stop,
    new Services\Install,
    new Services\Uninstall,
    new Daemons\All,
    new Daemons\Create,
    new Daemons\Delete,
    new Daemons\Get,
    new Daemons\Reboot,
    new Deployment\Deploy,
    new Deployment\DisableQuickDeploy,
    new Deployment\EnableQuickDeploy,
    new Deployment\GetScript,
    new Deployment\UpdateScript,
    new Deployment\Log,
    new Deployment\ResetStatus,
    new FirewallRules\All,
    new FirewallRules\Create,
    new FirewallRules\Delete,
    new FirewallRules\Get,
    new Jobs\All,
    new Jobs\Create,
    new Jobs\Delete,
    new Jobs\Get,
    new Databases\All,
    new Databases\Create,
    new Databases\Delete,
    new Databases\Get,
    new Workers\All,
    new Workers\Create,
    new Workers\Delete,
    new Workers\Get,
    new Workers\Reboot,
    new Recipes\All,
    new Recipes\Create,
    new Recipes\Delete,
    new Recipes\Get,
    new Recipes\Run,
    new Recipes\Update,
]);

$app->run();
